<h1>CD新規登録</h1>
<!-- 画像-->
<div  class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<%= form_for(@item) do |f| %>
			<ul>
				<li>
					<p>タイトル</p>
					<%= f.text_field :name %>
				</li>
				<li>
					<p>歌手</p>
					<%= f.select :artist_id, Artist.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %>
				</li>
				<li>
					<p>ジャンル</p>
					<%= f.select :genre_id, Genre.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %>
				</li>
				<li>
					<p>レーベル</p>
					<%= f.select :label_id, Label.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %>
				</li>
				<li>
					<p>価格</p>
					<%= f.text_field :price %>
				</li>
				<li>
					<p>在庫</p>
					<%= f.text_field :stack %>
				</li>
				<li>
					<h3>Disc</h3>
					<div id="discs">
						<%= f.fields_for :discs do |disc| %>
						<%= render 'disc_fields', f: disc %>
						<% end %>
					</div>
					<div class="links">
						<%= link_to_add_association 'add disc', f, :discs %>
					</div>
					<%= f.submit %>
					<% end %>
				</li>
			</ul>
		</div>
	</div>
</div>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-4">
			<p>ステータス</p>
			<div class="btn-group" data-toggle="buttons">
				<label class="btn btn-primary active">
					<input type="radio" name="sampleRadio" id="sampleRadio1" autocomplete="off" checked> 販売中
				</label>
				<label class="btn btn-primary">
					<input type="radio" name="sampleRadio" id="sampleRadio2" autocomplete="off"> 販売停止中
				</label>
			</div>
		</div>
	</div>
</div>