<h1>CD情報編集</h1>
<div class="container">
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<ul>
				<li>
					<p>タイトル</p>
					<%= @item.name %>
				</li>
				<li>
					<p>歌手</p>
					<%= @item.artist.name %>
				</li>
				<li>
					<p>ジャンル</p>
					<%= @item.genre.name %>
				</li>
				<li>
					<p>レーベル</p>
					<%= @item.label.name %>
				</li>
				<li>
					<p>値段</p>
					<%= @item.price %>
				</li>
				<li>
					<p>在庫数</p>
					<%= @item.stack %>
				</li>
				<li>
					<p>画像</p>
					<%= attachment_image_tag item, :image, format: 'jpeg', size: "100x100" %>
				</li>
				<li>
					<p>ディスク</p>
					<%= @item_disc.name %>
					<%= @item_disc_song.name %>
				</li>
			</ul>
		</div>
		<div class="col-md-4 col-md-offset-2">
			<%= form_for(@item) do |f| %>
			<ul>
				<li>
					<p>タイトル</p>
					<%= f.text_field :name %>
				</li>
				<li>
					<p>歌手</p>
					<%= f.text_field :artist.name %>
				</li>
				<li>
					<p>ジャンル</p>
					<%= f.text_field :genre.name %>
				</li>
				<li>
					<p>レーベル</p>
					<%= f.text_field :label.name %>
				</li>
				<li>
					<p>値段</p>
					<%= f.text_field :price %>
				</li>
				<li>
					<p>在庫数</p>
					<%= f.text_field :stack %>
				</li>
				<li>
					<p>画像</p>
					<%= f.attachment_field :image %>
				</li>
				<li>
					<p>ディスク</p>
					<div id="discs">
						<%= f.fields_for :discs do |disc| %>
						<% end %>
					</div>
				</li>
				<% end %>
			</ul>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2 col-md-offset-5">
			<p>ステータス</p>
			<div class="btn-group" data-toggle="buttons">
				<label class="btn btn-primary active">
					<input type="radio" name="sampleRadio" id="sampleRadio1" autocomplete="off" checked> 販売中
				</label>
				<label class="btn btn-primary">
					<input type="radio" name="sampleRadio" id="sampleRadio2" autocomplete="off"> 販売停止中
				</label>
			</div>
			<div>
				<%= link_to "削除", items_path(@item), method: :delete %>
			</div>
				<%= form_for(@item) do |f| %>
			<div>
				<%= f.submit %>
			</div>
			<% end %>
		</div>
	</div>
</div>