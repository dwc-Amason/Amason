


<h1>商品一覧</h1>




	<div class="container">
	 <div class="row">
<% @items.each do |item| %>
	  <div class="col-md-4">
	   <%= link_to item_path(item) do %>
	    <div><%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %></div>

			<div><%= item.name %></div>
			<div><%= item.artist_id %></div>
			<div><%= item.price %></div>



	   <% end %>
	  </div>
	 </div>
	</div>
<div>
	<%= paginate(@itemse, :outer_window => 3) %>
</div>
<% end %>

