

<h1>商品一覧</h1>




	<div class="container">
	 <div class="row">
<% @items.each do |item| %>
	  <div class="col-md-4">
	   <%= link_to item_path(item) do %>
	    <div><%= attachment_image_tag item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %></div>

			<div><%= item.name %></div>
			<div><%= item.artist_id %></div>
			<div><%= item.price %></div>
	   <% end %>
		<div>
			<%= form_for(@cart_item) do |f| %>
        	<%= f.number_field :number %>
        	<%= f.hidden_field :item_id, value: item.id %>
        	<%= f.hidden_field :user_id, value: current_user.id %>
    	    <%= f.submit "カートに入れる" %>
		    <% end %>
		</div>
	  </div>
	 </div>
	</div>
<% end %>

