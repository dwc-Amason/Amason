<!DOCTYPE html>
<html>
  <head>
    <title>Amason</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'cart.js', 'data-turbolinks-track': 'reload'  %>
  </head>
  <body>
    <header class="nav navbar-inverse row">
      <div class="logo col-md-2">
        <h1><%= link_to 'Amason', items_path %></h1>
      </div>
      <div class="search col-md-10">
        <div class="row chris">
          <div class="col-md-5">
            <% if admin_signed_in? %>
              <div>
              <%= search_form_for @q do |f| %>
                <span><%= f.search_field :name_or_artist_name_or_genre_name_cont %></span>
                <span><%= f.submit '商品検索'%></span>
                <% end %>
              </div>
            <% elsif user_signed_in? %>
              <div>
                <%= search_form_for @q do |f| %>
                    <span><%= f.search_field :name_or_artist_name_or_genre_name_cont %></span>
                    <span><%= f.submit '検索'%></span>
                <% end %>
              </div>
            <% else %>
              <div>
                <%= search_form_for @q do |f| %>
                  <span><%= f.search_field :name_or_artist_name_or_genre_name_cont %></span>
                  <span><%= f.submit '検索'%></span>
                  <% end %>
              </div>
            <% end %>
          </div>
          <div class="links col-md-7">
            <% if admin_signed_in? %>
              <button type="button" class="btn"> <%= link_to "admin_ログアウト", destroy_admin_session_path, method: :delete %></button>
              <button type="button" class="btn"><%= link_to 'link', admins_link_path %></button>
            <% elsif user_signed_in? %>
              <button type="button" class="btn btn-light"><%= link_to current_user.name_last, user_path(current_user) %></button>
              <button type="button" class="btn"><%= link_to 'カート', cart_items_path %></button>
              <button type="button" class="btn"> <%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
              <button type="button" class="btn"><%= link_to '購入履歴', orders_path %></button>
            <% else %>
              <button type="button" class="btn"><%= link_to "sign in", new_user_session_path %></button>
              <button type="button" class="btn"><%= link_to "sign up", new_user_registration_path %></button>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </header>
    <%= yield %>
      <footer style="margin-top:5em;">
        <div class='container1'>
          <div class='row'>
              <div class='col-xs-3 col-xs-offset-9'>
              <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>


