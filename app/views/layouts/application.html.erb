<!DOCTYPE html>
<html>
  <head>
    <title>Amason</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'cart.js', 'data-turbolinks-track': 'reload'  %>
  </head>
  <body>
      <nav class="navbar navbar-fixed-top navbar-inverse navbar-static-top navbar-right">
        <div class="navbar-header">
          <div class="collapse navbar-collapse" id="navbarEexample">
            <h1 class="navbar-brand">Amason</h1>
            <ul class="nav navbar-nav">
            <span>
              <%= form_tag('/items',:method => 'get') do %>
                 <%= text_field_tag :search %>
                 <%= submit_tag '検索', :name => nil %>
              <% end %>
            </span>
          <% if user_signed_in? %>
            <!-- ログイン時 -->
            <ul class="nav navbar-nav">
              <button type="button" class="btn btn-light">
                <%= link_to current_user.name_last, user_path(current_user) %>
              </button>
              <button type="button" class="btn"><%= link_to 'カート', cart_items_path %></button>
              <button type="button" class="btn"> <%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
              <button type="button" class="btn"><%= link_to '購入履歴', orders_path %></button>
            </ul>
          <% else %>
            <!-- 未ログイン時 -->
            <ul class="nav navbar-nav">
              <button type="button" class="btn"><%= link_to "sign in", new_user_session_path %></button>
              <button type="button" class="btn"><%= link_to "sign up", new_user_registration_path %></button>
            </ul>
          <% end %>
          </ul>
        </div>
      </div>
    </nav>
  <%= yield %>
  </body>
</html>