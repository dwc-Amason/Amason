<!DOCTYPE html>
<html>
  <head>
    <title>Amason</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'cart.js', 'data-turbolinks-track': 'reload'  %>
  </head>
    <body>
        <nav class="navbar navbar-fixed-top navbar-inverse navbar-static-top navbar-right">
            <div class="navbar-header">
              <div class="collapse navbar-collapse" id="navbarEexample">
                <h1 class="navbar-brand">
                    <%= link_to 'Amason', items_path %></h1>
                <ul class="nav navbar-nav">
                    <span>
                      <% if admin_signed_in? %>
                        <%= search_form_for @q do |f| %>
                            <% f.label :name_or_artist_name_or_genre_name_cont %>
                            <%= f.search_field :name_or_artist_name_or_genre_name_cont %>

                            <%= f.submit '検索'%>
                            <% end %>
                        <%= search_form_for @t do |t| %>
                            <% t.label :name_first_or_name_last_or_name_first_phonetic_or_name_last_phonetic_cont %>
                            <%= t.search_field :name_first_or_name_last_or_name_first_phonetic_or_name_last_phonetic_cont %>

                            <%= t.submit '検索' %>
                        <% end %>
                      <% elsif user_signed_in? %>
                        <%= search_form_for @q do |f| %>
                            <%= f.label :name_or_artist_name_or_genre_name_cont %>
                            <%= f.search_field :name_or_artist_name_or_genre_name_cont %>

                            <%= f.submit '検索'%>
                        <% end %>
                      <% else %>
                        <%= search_form_for @q do |f| %>
                            <% f.label :name_or_artist_name_or_genre_name_cont %>
                            <%= f.search_field :name_or_artist_name_or_genre_name_cont %>

                            <%= f.submit '検索'%>
                            <% end %>
                      <% end %>
                    </span>

                  <% if user_signed_in? %>
                    <!-- ログイン時 -->
                  <ul class="nav navbar-nav">
                   <button type="button" class="btn btn-light">
                    <%= link_to current_user.name_last, user_path(current_user) %>
                   </button>
                    <button type="button" class="btn"><%= link_to 'カート', cart_items_path %></button>
                    <button type="button" class="btn"> <%= link_to "ログアウト", destroy_user_session_path, method: :delete %></button>
                    <button type="button" class="btn"><%= link_to '購入履歴', orders_path %></button>
                  </ul>
                  <% else %>
                  <!-- 未ログイン時 -->
                  <ul class="nav navbar-nav">
                    <button type="button" class="btn"><%= link_to "sign in", new_user_session_path %></button>
                    <button type="button" class="btn"><%= link_to "sign up", new_user_registration_path %></button>
                  <% end %>
                </ul>
                </ul>
              </div>
            </div>
          </div>
      </header>
<div class="body-space">
      <%= yield %>
  </div>
        <footer style="margin-top:5em;">
          <div class='container1'>
            <div class='row'>
               <div class='col-xs-3 col-xs-offset-9'>
               <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
    </body>
</html>




