<div class="container">
	<h1>住所選択</h1>
	<div class="row" >
         <% @shipping_addresses.each do |shipping_addresses| %>
	      <div class="col-md-4" border="2">
		    <div><%= current_shipping_addresses.name_last %></div>
		    <div><%= current_shipping_addresses.name_first %></div>
		    <div><%= current_shipping_addresses.name_last_phonetic %></div>
		    <div><%= current_shipping_addresses.name_first_phonetic %></div>
		    <div><%= current_shipping_addresses.post_code %></div>
		    <div><%= current_shipping_addresses.address %></div>
		    <div><%= current_shipping_addresses.phone %></div>
		    <btn><%= link_to "この住所を使う", "#" %></btn>
		   </div>
		 <% end %>
	</div>
</div>