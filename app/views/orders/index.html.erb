<h1>受注履歴</h1>
<div class="container">
	<div class="row">
		<table class="table table-hover table-inverse">
			<thead>
            	<tr>
              		<th>購入日</th>
              		<th>合計金額</th>
              		<th>配送状況</th>
            	</tr>
          	</thead>
          	<tbody>
          		<% @orders.each do |order| %>
	          		<tr>
						<td>
							<p><%= link_to order_path(order) do %><%= order.created_at.strftime('%Y/%m/%d') %><% end %></p>
						</td>
						<td>
							<p><%= order.total_price %></p>
						</td>
						<td>
							<p><%= order.shipping_status %></p>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>

<%= paginate @orders %>

