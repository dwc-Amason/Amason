<div class="contaner">
    <div class="row">
        <div class="col-md-12">
            <h2>ユーザー編集ページ</h2>
            <%= form_for(@user) do |f| %>
            <p>姓</p>
            <%= @user.name_first %>
            <%= f.text_field :name_first %>
            <p>名</p>
            <%= @user.name_last %>
            <%= f.text_field :name_last %>
            <p>セイ</p>
            <%= @user.name_first_phonetic %>
            <%= f.text_field :name_first_phonetic %>
            <p>メイ</p>
            <%= @user.name_last_phonetic %>
            <%= f.text_field :name_last_phonetic %>

            <h3>郵便番号</h3>
            <%= @user.post_code %>
            <%= f.text_field :post_code %>

            <h3>住所</h3>
            <%= @user.address %>
            <%= f.text_field :address %>

            <h3>TEL</h3>
            <%= @user.phone %>
            <%= f.text_field :phone %>

            <h3>mail</h3>
            <%= @user.email %>
            <%= f.email_field :email %>

            <h3>pass</h3>
            <%= @user.password %>
            <% f.password_field :password %>

            <%= f.submit 'アップデート' %>
            <% end %>
        </div>
    </div>
