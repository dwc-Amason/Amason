<section class="border">
	<h2>新規作成</h2>

	<%= form_for(@artist) do |f| %>
	<%= f.text_field :name %>
	<%= f.submit %>
	<% end %>
</section>




<table class="table" border="1" >
	<tr>
		<th>名前</th>
		<th>編集</th>
	</tr>
	<% @artists.each do |artist| %>
	<tr class="artist">
		<td><%= artist.name %></td>
		<td><%= link_to "編集", edit_artist_path(artist) %></td>
	</tr>
	<% end %>
</table>