<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <h4>姓　　名</h4>
  <h4>name</h4>
    <%= f.label :name_first %>
    <%= f.text_field :name_first, autofocus: true,autocomplete: "" %>
    <%= f.label :name_last %>
    <%= f.text_field :name_last, autofoucus: true,autocomplete: "" %>

  <h4>ふりがな</h4>
    <%= f.label :name_first_phonetic %>
    <%= f.text_field :name_first_phonetic, autofoucus: true, autocomplete: "" %>
    <%= f.label :name_last_phonetic %>
    <%= f.text_field :name_last_phonetic, autofoucus: true, autocomplete: "" %>

  <div class="field">
    <%= f.label :post_code %>
    <%= f.text_field :post_code, autofocus: true,autocomplete: "郵便番号" %>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "住所" %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

　<div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autofocus: true, autocomplete:'tel' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="sign in">
    <%=link_to 'sign in', user_session_path, class: "btn btn-default" %>
  </div>

  <div class="actions">
    <%= f.submit "GO" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
