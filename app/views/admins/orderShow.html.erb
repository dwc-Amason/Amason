<div class="container">
	<div class="row">
	 	<%= @order.created_at.strftime('%Y/%m/%d') %>購入
	</div>
	<div class="row">
	<% @order_items.each do |order_item| %>
	    <div class="box col-md-4 text-center">
		<%= attachment_image_tag order_item.item, :image, fallback: "no_image.jpg", size:'200x200', format:'png' %><br>
	    商品名<p style="font-size:20px"><%= order_item.item.name %></p><br>
	    価格<p style="font-size:20px">¥<%= order_item.price %></p><br>
	    購入個数<p style="font-size:20px"><%= order_item.number %></p>
	    </div>
	<% end %>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<%= form_for(@order) do |f| %>
			<p>
				<%= f.radio_button :shipping_status, :"未配送" %> 未配送
				<%= f.radio_button :shipping_status, :"配送中" %> 配送中
				<%= f.radio_button :shipping_status, :"配送済" %> 配送済
			</p>
 			<%= f.submit class: "btn-flat-border" %>
			<% end %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-12 text-center">
			<%= paginate @order_items %>
		</div>
	</div>
</div>