<h1>CD一覧</h1>
<div class="container">
	<div class="row">
		<% @items.each do |item| %>
    	<div class="col-md-4 text-center">
			<%= link_to admins_itemShow_path(item.id) do %>
	    	<%= attachment_image_tag item, :image, fallback: "no_image.jpg", size:'100x100', format:'png' %>
			<p><%= item.name %></p>
			<p><%= item.artist.name %></p>
			<p><%= item.price %>円</p>
		<% end %>
		</div>
		<% end %>
	</div>
</div>
