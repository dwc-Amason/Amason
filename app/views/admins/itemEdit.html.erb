<div class="container" style="margin-top:6em;">
	<div class="row">
		<%= form_for(@item) do |f| %>
		<div class="col-md-4 col-md-offset-4 text-center">
			<%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "400x400" %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2 col-md-offset-5 text-center"><br>
			ジャケット変更
			<%= f.attachment_field :image %><br>
		</div>
	</div>
	<div class="row">
		<div class="col-md-2 text-center">
			<ul>
				<li>アルバム</li><br>
				<li>アーティスト</li><br>
				<li>ジャンル</li><br>
				<li>レーベル</li><br>
				<li>価格</li><br>
				<li>在庫数</li><br>
			</ul>
		</div>
		<div class="col-md-3 text-center">
			<ul>
				<li><%= @item.name %></li><br>
				<li><%= @item.artist.name %></li><br>
				<li><%= @item.genre.name%></li><br>
				<li><%= @item.label.name %></li><br>
				<li>¥<%= @item.price %></li><br>
				<li><%= @item.stack %></li><br>
			</ul>
		</div>
		<div class="col-md-2 text-center">
			<ul>
				<li>━━━━━━━━━━━━▶︎</li><br>
				<li>━━━━━━━━━━━━▶︎</li><br>
				<li>━━━━━━━━━━━━▶︎</li><br>
				<li>━━━━━━━━━━━━▶︎</li><br>
				<li>━━━━━━━━━━━━▶︎</li><br>
				<li>━━━━━━━━━━━━▶︎</li><br>
			</ul>
		</div>
		<div class="col-md-3 col-md-offset-1">
			<p><%= f.text_field :name, class: "form-control", placeholder: 'アルバム名を入力してください' %></p>
			<p style="margin-bottom:1em;"><%= f.select :artist_id, Artist.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %></p>
			<p style="margin-bottom:1em;"><%= f.select :genre_id, Genre.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %></p>
			<p><%= f.select :label_id, Label.all.map{|t| [t.name, t.id]}, :prompt => "選択してください" %></p>
			<p><%= f.text_field :price, class: "form-control", placeholder: '価格を入力してください' %></p>
			<p><%= f.text_field :stack, class: "form-control", placeholder: '在庫数を入力してください' %></p>
		</div>
	</div>
	<div class="row">
		<div class="col-md-3 col-md-offset-3">
	        <% @discs.each do |disc| %>
	        <h5><%= disc.name %></h5>
	        <% @songs.each do |song| %>
	        <p><%= song.track %>.<%= song.name %></p>
	        <% end %>
	  		<% end %>
	    </div>
		<div class="col-md-3"style="margin-bottom:3em;">
	    	<%= f.fields_for :discs do |m| %>
	    	<%= m.text_field :name %>
	    	<%= m.fields_for :songs do |n| %>
	    	<%= n.text_field :name %>
	    	<% end %>
	  		<% end %>
		</div>
	</div>
	<div class="row text-center">
		ステータス
		<h4><%= @item.status %></h4>
  		<p>
  			<%= f.radio_button :status, :"販売中" %> 販売中
  			<%= f.radio_button :status, :"販売停止中" %> 販売停止中
  		</p>
	    <%= f.submit 'OK', class: 'btn-flat-border1' %>
	</div>
	<% end %>
</div>

