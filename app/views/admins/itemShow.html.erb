<div class="container">
	<h1 class="well item-show-title">商品詳細</h1>

    <div>

			<div class="jakesya img-circle">
			  <%= attachment_image_tag @item, :image, format: 'jpeg', fallback: "no_image.jpg", size: "100x100"  %>
		    </div>
	          <ul class="name-rist">
	          	<li>タイトル<%= @item.name %></li>
				<li>アーティスト<%= @item.artist.name %></li><br>
				<li>ジャンル<%= @item.genre.name%></li><br>
				<li>レーベル<%= @item.label.name %></li><br>
	          	<li>価格<%= @item.price %></li>
	          	<li>在庫数<%= @item.stack %></li>
              </ul>
				<div class="songs">
				        <% @discs.each do |disc| %>
				          <div>ディスク名<%= disc.name %></div>
				          <% disc.songs.each do |song| %>
				          	<div>曲名<%= song.name %></div>
				          <% end %>
				        <% end %>

				</div>
				<div class="btn status"><%= @item.status %></div>
				</div>
	    		<btn><%= link_to "商品編集", edit_item_path %></btn>
</div>
