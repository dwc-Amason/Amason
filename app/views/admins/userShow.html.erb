<div  class="container">
	<div class="row">
		<h3 class="text-center">ユーザ情報</h3>
		<table class="box table text-center">
			<thead>
				<th></th>
				<th></th>
			</thead>
			<tbody>
				<tr>
					<td>
    					<p style="font-size:20px">名前</p>
    					<p style="font-size:20px">電話番号</p>
    					<p style="font-size:20px">メールアドレス</p>
    					<p style="font-size:20px">郵便番号</p>
    					<p style="font-size:20px">住所</p>
    				</td>
    				<td>
    					<p style="font-size:20px"><%= @user.name_first %><%= @user.name_last %></p>
				  		<p style="font-size:20px"><%= @user.post_code %></p>
				  		<p style="font-size:20px"><%= @user.address %></p>
						<p style="font-size:20px"><%= @user.phone %></p>
						<p style="font-size:20px"><%= @user.email %></p>
					</td>
				</tr>
			</tbody>
		</table>
		<%= link_to "配送先一覧", admins_shipping_address_path, class: 'btn btn-primary btn-lg btn-block' %>
		<%= link_to "購入履歴一覧", admins_enduser_order_path, class: 'btn btn-primary btn-lg btn-block' %><br>
		<p class="text-center">
			<%= link_to "削除する" , user_path(@user.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: 'btn-flat-border1' %>
		</p>
	</div>
</div>
