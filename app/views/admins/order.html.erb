<h1>受注履歴</h1>
<!-- 検索フォーム -->
<div class="container">
	<div class="row">
		<table class="table table-hover table-inverse">
			<thead>
            	<tr>
              		<th>購入日</th>
              		<th>購入者</th>
              		<th>合計金額</th>
              		<th>配送状況</th>
            	</tr>
          	</thead>
          	<tbody>
          		<% @orders.each do |order| %>
          		<tr>
					<td>
						<p><%= order.created_at %></p>
					</td>
					<td>
						<p><%= order.name_last %></p><p><%= order.name_first %></p>
					</td>
					<td>
						<p><%= order.total_price %></p>
					</td>
					<td>
						<p><%= order.shipping_status %></p>
					</td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
<!-- ページング -->