<div class="container">
	<div class="row">
		<div class="col-md-12">
		  <h2>注文を確認・確定する</h2>
			<div class="well">
				<table>
			      <tr>
				    <th><h3>氏名・フリガナ</h3>
				    <%= @user.name_first %>
				    <%= @user.name_last %>
				    <%= @user.name_first_phonetic %>
				    <%= @user.name_last_phonetic %></th>
				  </tr>
				  <tr>
				    <h3>郵便番号</h3>
				    <%= @user.post_code %>
				  </tr>
				  <tr>
				    <th><h3>お届け先住所</h3>
				    <%= @user.address %></th>
				  </tr>
				  <tr>
				    <th><h3>電話番号</h3>
				    <%= @user.phone %></th>
				  </tr>
				</table>
		    </div>
		    <%= link_to '既存の住所を使用',class: "btn btn-primary" %>
		    <%= link_to '新しいお届け先', class: "btn btn-success" %>
		</div>
	</div>
	<div class="row-1">
	    <h2>お支払い方法の選択</h2>
	    <div class="well">
	    </div>
	</div>
</div>


