
<div class="shopping container">
	<h2>ショッピングカート</h2>
	<div class="row">
		<table class="col-md-8 " border="1">
			<tr>
				<th></th>
				<th>商品名</th>
				<th>一枚あたりの価格</th>
				<th>枚数</th>
				<th>総計</th>
				<th></th>
			</tr>
			<% @cart_items.each do |cart_item| %>
			<tr>
				<td>
					<%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x100"  %>
				</td>
				<td><%= cart_item.item.name %></td>
				<td><span class="basePrice" id="basePrice_<%= cart_item.id %>"><%= cart_item.item.price %></span><span>円</span></td>
				<td><select class="num" id="num_<%= cart_item.id %>" >
					<% (1..10).each do |i| %>
					<% if i == cart_item.number %>
						<option value=<%= i %> selected>　<%= i %>個</option>
					<% else %>
						<option value=<%= i %> >　<%= i %>個</option>
						<% end %>
					<% end %>
				</select>
			</td>
				<td class="price">
					<span class="total" id="total_<%= cart_item.id %>"><%= cart_item.item.price %></span><span>円</span>
				</td>
				<td>
					<%= link_to '削除', cart_item_path(cart_item), method: :delete, class: "btn btn-default"%>
				</td>
		    </tr>
		    <% end %>
		</table>
		<table class="col-md-2 col-md-offset-1" border="6">
			<tr>
				<th>小計：</th>
				<td><span class="subtotal"></span><span>円</span></td>
			</tr>
			<tr>
				<th>消費税：</th>
				<td><span class="tax"></span><span>円</span></td>
			</tr>
			<tr>
				<th>合計：</th>
				<td><span class="totalPrice"></span><span>円</span></td>
			</tr>
			<tr><th colspan="2"><%= link_to 'レジに進む', cart_items_path %></th></tr>
		</table>
	</div>
</div>
<%= paginate @cart_items %>