<div class="shopping">
	<h1>ショッピングカート</h1>
	<% @cart_items.each do |cart_item| %>
	<tr>
	<td><%= attachment_image_tag cart_item.item, :image, format: 'jpeg', size: "100x100"  %></td>
	<td><%= cart_item.item.name %><td>
	<td><%= cart_item.item.price %></td>
	<td><%= cart_item.number %></td>
	<td><%= link_to '削除', item_path(cart_item), method: :delete, class: "btn btn-default" %></td>
    </tr>
    <% end %>
    <%= link_to 'レジに進む', cart_items_path %>

</div>
