<div class="shopping">
	<h1>ショッピングカート</h1>
	<%= @cart_items.each do |item| %>
	<tr>
	<td><%= attachment_image_tag, item, :image, :fill, 100, 100, format: "jpg"  %></td>
	<td><%= item.title %><td>
	<td><%= item.price %></td>
	<td><%= item.number %></td>
	<td><%= link_to '削除', item_path, method: :delete, class: "btn btn-default" %></td>
    </tr>
    <% end %>
    <%= @order total_price %>
    <%= link_to 'レジに進む', cart_item_path %>
    <%= paginate @cart_items, class: "paginate" %>
</div>
